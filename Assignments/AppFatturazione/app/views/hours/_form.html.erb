<%= form_with(model: hour, local: true) do |form| %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= errors_for(@hour) %>

    <div class="form-group row">
        <%= form.label :date, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.date_select :date, id: :hour_date, :order => [:day, :month, :year], class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
        <%= form.label :start_time, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.time_select :start_time, id: :hour_start_time, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
        <%= form.label :end_time, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.time_select :end_time, id: :hour_end_time, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
        <%= form.label :description, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_area :description, id: :hour_description, class: 'form-control' %>
      </div>
    </div>

    <% if !params.has_key?(:client_base_id) %>
      <div class="form-group row">
          <%= form.label :client, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.collection_select :client_id, current_user.clients.order(:name),:id,:name, include_blank: true, class: 'form-control' %>
        </div>
      </div>
    <% else
        c_id = params[:client_base_id] %>
        <%= form.hidden_field :client_id, :value => c_id %>
      <% end %>
      <br/>
    <%= form.submit "Submit", class: "btn btn-primary"%>
    </div>
  </div>

<% end %>
